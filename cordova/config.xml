<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ryseapp.ryse" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ryse</name> 
    <description>
        A sample Apache Cordova application that loads a locally running React app.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Bryan Hunter
    </author>
    <content src="http://localhost:3000" />
    <allow-navigation href="http://localhost:3000/*" />
    <platform name="android">
      <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
      </edit-config>
    </platform>
</widget>
